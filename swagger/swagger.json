    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "Enter your bearer token in the format **Bearer &lt;token>**"
      }
    },
    "paths":{  
        "/health/ping":{
           "get":{
               "description":"Check Helath",
               "tags":["Health"],
               "responses":
               {
                 "200":{
                   "description": "Success"
                 },
                 "404":{
                    "description": "not found"
                 }
               }
           } 
        },
        "/user/register":{
          "post":{
            "description":"Change password",
            "tags":["User"],
            "parameters":[{
                  "in":"body",
                  "name":"body",
                  "description":"UserBody",
                  "required":true,
                  "schema":{
                    "$ref":"#/definitions/UserRegister"
                  }
                }
              ],
            "responses":
            {
              "200":{
                "description": "Success"
              },
              "404":{
              "description": "not found"
              }
            }
          }
        },
        "/user/profile":{
          "get":{
            "description": "Get user by part",
            "tags": ["User"],
            "security": [{ "Bearer": [] }],
            "responses":
            {
              "200":{
                "description": "Success"
              },
              "404":{
              "description": "not found"
              }
            }
          }
        },
        "/user/login":{
          "post":{
            "description":"User Authentication",
            "tags":["User"],
            "parameters":[{
                "in":"body",
                "name":"body",
                "description":"UserBody",
                "required":true,
                "schema":{
                  "$ref":"#/definitions/User"
                }
              }
            ],
            "responses":
              {
                "200":{
                  "description": "Success"
                },
                "404":{
                  "description": "not found"
                }
              }
          } 
        }
    },
    "definitions":{
      "UserRegister":{
        "type":"object",
        "properties":{
          "first_name":{
            "type":"string",
            "require":true
          },
          "last_name":{
            "type":"string",
            "require":true
          },
          "email":{
            "type":"string",
            "require":true
          },
          "password":{
            "type":"string",
            "require":true
          }
        }
      },
      "User":{
        "type":"object",
        "properties":{
          "email":{
            "type":"string",
            "require":true
          },
          "password":{
            "type":"string",
            "require":true
          }
        }
      },
      "Token":{
        "type":"object",
        "properties":{
          "token":{
            "type":"string",
            "require":true
          }
        }
      }
    },
    "components":{
      "responses":{
        "UnauthorizedError":{
          "description": "Access token is missing or invalid"
        }
      }
    },
    "externalDocs": {
      "description": "Find out more about Swagger",
      "url": "http://swagger.io"
    }
}